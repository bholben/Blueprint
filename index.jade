  link(rel="stylesheet", href="main.css")

mixin section(date, time, heading, para)
  section
    div.timestamp
      p.date 4/10/13
      p.time 18:30
    div.wrapper
      div.content
        h2 Ricebean black-eyed pea
        article
          p #{para}
      div.circleLarge
        div.circleSmall
          i.fa.fa-mobile
      div.triangle

